{
  "private": true,
  "name": "tgui-workspace",
  "version": "5.0.1",
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tgui:analyze": "webpack --analyze",
    "tgui:bench": "webpack --env TGUI_BENCH=1 && node packages/tgui-bench/index.js",
    "tgui:build": "BROWSERSLIST_IGNORE_OLD_DATA=true webpack",
    "tgui:dev": "node --experimental-modules packages/tgui-dev-server/index.js",
    "tgui:eslint": "eslint --fix packages --ext .js,.cjs,.ts,.tsx",
    "tgui:eslint-nofix": "eslint packages --ext .js,.cjs,.ts,.tsx",
    "tgui:prettier": "prettier --log-level warn --write .",
    "tgui:prettier-nofix": "prettier --log-level warn --check .",
    "tgui:sonar": "eslint packages -c .eslintrc-sonar.yml",
    "tgui:test": "jest --watch",
    "tgui:test-simple": "CI=true jest --color",
    "tgui:test-ci": "CI=true jest --color --collect-coverage",
    "tgui:tsc": "tsc"
  },
  "dependencies": {
    "@swc/core": "^1.9.2",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/parser": "^8.14.0",
    "@typescript-eslint/utils": "^8.14.0",
    "css-loader": "^7.1.2",
    "esbuild-loader": "^4.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^1.0.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.49",
    "postcss-css-variables": "^0.19.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "style-loader": "^4.0.0",
    "swc-loader": "^0.2.6",
    "typescript": "^5.4.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  }
}
